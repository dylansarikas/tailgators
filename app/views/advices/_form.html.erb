  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div>
    <%= form.submit :Submit, class: "btn btn-outline-success m-2" %>
  </div>
<% end %>
