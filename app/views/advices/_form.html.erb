<%= form_with(model: advice) do |form| %>
  <% if advice.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(advice.errors.count, "error") %> prohibited this advice from being saved:</h2>
      <ul>
        <% advice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Users can change user_id through browser with this approach  %>
  <%= form.hidden_field :adviceable_id %>
  <%= form.hidden_field :adviceable_type %>
