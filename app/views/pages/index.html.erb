<div class="container px-4 px-lg-5">
  <!-- Heading Row-->
  <div class="row gx-4 gx-lg-5 align-items-center my-5">
      <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src=<%= image_tag("landing.webp") %> alt="US Bank Stadium" /></div>
      <div class="col-lg-5">
          <h1 class="font-weight-light">Welcome to Tailgators</h1>
          <p>
            Look up stadiums, find the best tailgates, search for nearby hotels all on Tailgators! Read the best football advice on the internet and don't forget to share your own.  Sign up today!
          </p>
          <%= link_to 'Find all Stadiums', stadiums_path, class: "btn btn-primary" %>
      </div>
  </div>
  <!-- Call to Action-->
  <div class="card text-white bg-secondary my-5 py-4 text-center">
      <div class="card-body"><p class="text-white m-0">Find the next stadium or tailgate that you want to experience!</p></div>
  </div>
  <!-- Content Row-->
  <div class="d-flex p-2 justify-content-evenly flex-wrap">
    <div class="mt-4"><%= render @gb %></div>
    <div class="mt-4"><%= render @chi %></div>
    <div class="mt-4"><%= render @det %></div>
  </div>

  <div class="d-flex p-2 justify-content-evenly flex-wrap">
    <div class="mt-4"><%= render @gb.tailgates.sample %></div>
    <div class="mt-4"><%= render @chi.tailgates.sample %></div>
    <div class="mt-4"><%= render @det.tailgates.sample %></div>
  </div>
</div>
