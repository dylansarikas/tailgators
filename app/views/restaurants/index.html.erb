<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= render restaurant %>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <div>
    <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-outline-success m-2" %>
  </div>
  <div>
    <%= link_to "Back to stadium", stadium_path(@stadium_lot.name), class: "btn btn-outline-primary m-2"%>
  </div>
</div>
