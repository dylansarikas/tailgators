<%= render "wide_stadium", :stadium => @stadium %>

<div class="d-flex flex-column align-items-center">
  <div class="d-flex flex-wrap justify-content-between">
    <div>
      <%= link_to 'Check out Hotels', hotels_by_stadium_path, class: "btn m-2 btn-"+@stadium.nick_name %>
    </div>

    <div>
      <%= link_to 'Check out Tailgates', tailgates_by_stadium_path, class: "btn m-2 btn-"+@stadium.nick_name %>
    </div>

    <div>
      <%= link_to 'Check out Restaurants', restaurants_by_stadium_path, class: "btn m-2 btn-"+@stadium.nick_name %>
    </div>
    
    <div>
      <%= link_to 'Check out Parking', lots_by_stadium_path, class: "btn m-2 btn-"+@stadium.nick_name %>
    </div>
  </div>

  <div class="d-flex justify-content-center p-2">
    <%= render "/shared/map_card", :map => @stadium %>
  </div>
</div>


<h3 class="mt-2">Helpful Tips!</h3>

<hr>  

<ul class="list-group list-group-flush">
  <% @stadium.advices.each do |advice| %>
    <li class="list-group-item">
      <%= render advice %>
    </li>
  <% end %>
</ul>

<div  class="card-body">
  <% if current_user %>
    <h3>Share your tips!</h3>
    <%= render "advices/form", advice: Advice.new(adviceable_id: @stadium.id, adviceable_type: @stadium.class, user_id: current_user.id) %>    
  <% end %>

</div>

<br>

<div>
  <%= link_to "Back to Stadiums", stadiums_path, class: "btn btn-outline-primary m-2" %>
</div>
