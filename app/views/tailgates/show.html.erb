<%= render @tailgate %>

<div>
  <%= link_to "Edit this Tailgate", edit_tailgate_path(@tailgate), class: "btn btn-outline-success m-1" %>

  <%= button_to "Delete Tailgate", @tailgate, class: "btn btn-outline-danger m-1", method: :delete %>
</div>


<h3 class="mt-2">Helpful Tips!</h3>

<hr>

<ul class="list-group list-group-flush">
  <% @tailgate.advices.each do |advice| %>
    <li class="list-group-item">
      <%= render advice %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Back to tailgates", tailgates_path %>
</div>
