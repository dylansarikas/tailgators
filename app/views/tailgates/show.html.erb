<div class="d-flex justify-content-center">
  <%#= render @tailgate %>
  <%= render "wide_tailgate", :tailgate => @tailgate %>
</div>

<div>
  <%#= link_to "Edit this Tailgate", edit_tailgate_path(@tailgate), class: "btn btn-outline-success m-1" %>

  <%= render "map_card", :map => @tailgate %>

  <%#= button_to "Delete Tailgate", @tailgate, class: "btn btn-outline-danger m-1", method: :delete %>
</div>


<h3 class="mt-2">Helpful Tips!</h3>

<hr>

<ul class="list-group list-group-flush">
  <% @tailgate.advices.each do |advice| %>
    <li class="list-group-item">
      <%= render advice %>
    </li>
  <% end %>
</ul>

<div  class="card-body">
  <!--i dont understand why stadium.advice.build doesnt work-->
  <% if current_user %>
    <%= render "advices/form", advice: Advice.new(adviceable_id: @tailgate.id, adviceable_type: @tailgate.class, user_id: current_user.id) %>
  <% end %>
  
</div>

<br>

<div class="d-flex">
  <div>
    <%= link_to "All Tailgates", tailgates_path, class: "btn btn-outline-primary m-2" %>
  </div>

  <div>
    <%= link_to "#{@tailgate.stadium.team} Tailgates", tailgates_by_stadium_path(@tailgate.stadium.name), class: "btn btn-outline-success m-2" %>
  </div>
</div>
